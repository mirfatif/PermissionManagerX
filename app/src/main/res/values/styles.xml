<resources>
  <!-- Base application theme. -->
  <style name="BaseTheme" parent="Theme.AppCompat.DayNight">

    <!--Define custom attributes unique to the theme-->
    <item name="accentColor">@color/green</item>
    <item name="accentTrans5Color">@color/greenTrans5</item>
    <item name="accentTrans10Color">@color/greenTrans10</item>
    <item name="accentTrans20Color">@color/greenTrans20</item>
    <item name="accentTrans50Color">@color/greenTrans50</item>
    <item name="accentTrans75Color">@color/greenTrans75</item>

    <!--Preference Group Titles, Dialog Button Text-->
    <item name="colorAccent">?attr/accentColor</item>

    <!--Check Boxes, Switch Active State, Indeterminate Progress Bar. If not set, uses colorAccent-->
    <!--<item name="colorControlActivated">?attr/accentColor</item>-->

    <!--Status Bar-->
    <item name="colorPrimaryDark">?attr/accentColor</item>

    <!--Action Bar-->
    <item name="colorPrimary">?attr/accentTrans10Color</item>

    <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    <!--<item name="alertDialogTheme">@style/myAlertDialogTheme</item>-->
  </style>

  <style name="SpinnerItemStyle">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/active_disabled</item>
  </style>

  <!--============== About Activity ==============-->

  <style name="AboutActivityItemContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">?android:attr/selectableItemBackground</item>
  </style>

  <style name="AboutActivityIconImg">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginEnd">8dp</item>
  </style>

  <style name="AboutActivityItemTextBox">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="AboutActivityItemTitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="AboutActivityItemSummary">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">2dp</item>
    <item name="android:textAlignment">viewStart</item>
  </style>

  <!--============== Common Styles ==============-->

  <style name="BgColorControlNormal">
    <item name="android:background">@color/colorControlNormal</item>
  </style>

  <style name="ListSeparator" parent="BgColorControlNormal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
  </style>

  <style name="ListSeparatorDim" parent="ListSeparator">
    <item name="android:alpha">0.25</item>
  </style>

  <style name="CustomButton" parent="Widget.AppCompat.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/active_disabled</item>
  </style>

</resources>

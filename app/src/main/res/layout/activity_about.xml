<?xml version="1.0" encoding="utf-8"?>
<com.mirfatif.permissionmanagerx.fwk.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <View
    style="@style/ListSeparator"
    android:background="?attr/accentColor" />

  <androidx.core.widget.NestedScrollView
    android:id="@+id/scroll_v"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/icon"
        tools:ignore="ContentDescription" />

      <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="16sp" />

      <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        tools:text="Version: " />

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/contact"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/email"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            style="@style/AboutActivityItemTitle"
            android:text="@string/email" />

          <TextView
            style="@style/AboutActivityItemSummary"
            android:text="@string/email_address" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/telegram"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/telegram"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            style="@style/AboutActivityItemTitle"
            android:text="@string/telegram_group" />

          <TextView
            style="@style/AboutActivityItemSummary"
            android:text="@string/telegram_group_link" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/source_code"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/github_mark"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            style="@style/AboutActivityItemTitle"
            android:text="@string/source" />

          <TextView
            style="@style/AboutActivityItemSummary"
            android:text="@string/source_url" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/issues"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/issues"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            style="@style/AboutActivityItemTitle"
            android:text="@string/report_issues" />

          <TextView
            style="@style/AboutActivityItemSummary"
            android:text="@string/report_issues_summary" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/logging"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/log"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            android:id="@+id/logging_title"
            style="@style/AboutActivityItemTitle"
            android:text="@string/collect_logs" />

          <TextView
            style="@style/AboutActivityItemSummary"
            android:text="@string/collect_logs_summary" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/send_crash_report"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/report"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            style="@style/AboutActivityItemTitle"
            android:text="@string/send_crash_report_title" />

          <TextView
            style="@style/AboutActivityItemSummary"
            android:text="@string/send_crash_report_summary" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/dump_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
          style="@style/ListSeparator"
          android:background="?attr/accentColor" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
          android:id="@+id/dump_v"
          style="@style/AboutActivityItemContainer">

          <ImageView
            android:id="@+id/dump_icon_v"
            style="@style/AboutActivityIconImg"
            android:src="@drawable/database"
            tools:ignore="ContentDescription" />

          <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

            <TextView
              android:id="@+id/dump_title_v"
              style="@style/AboutActivityItemTitle"
              android:text="@string/about_dump_title" />

            <TextView
              android:id="@+id/dump_summary_v"
              style="@style/AboutActivityItemSummary"
              android:text="@string/about_dump_summary" />

          </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/rating"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/star"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            style="@style/AboutActivityItemTitle"
            android:text="@string/app_rating" />

          <TextView
            style="@style/AboutActivityItemSummary"
            android:text="@string/app_rating_summary" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/paid_features_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
          android:id="@+id/paid_features"
          style="@style/AboutActivityItemContainer">

          <ImageView
            style="@style/AboutActivityIconImg"
            android:src="@drawable/paid"
            tools:ignore="ContentDescription" />

          <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

            <TextView
              style="@style/AboutActivityItemTitle"
              android:text="@string/paid_features" />

            <TextView
              android:id="@+id/paid_features_summary"
              style="@style/AboutActivityItemSummary"
              android:ellipsize="end"
              android:maxLines="1"
              android:text="@string/paid_features_url" />

          </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

        <View
          style="@style/ListSeparator"
          android:background="?attr/accentColor" />

      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/privacy_policy"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/privacy_policy"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            style="@style/AboutActivityItemTitle"
            android:text="@string/privacy_policy" />

          <TextView
            style="@style/AboutActivityItemSummary"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/privacy_policy_link" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/translate"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/locale"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            style="@style/AboutActivityItemTitle"
            android:text="@string/translations" />

          <TextView
            style="@style/AboutActivityItemSummary"
            android:text="@string/translations_summary" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/share_app"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/share"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            style="@style/AboutActivityItemTitle"
            android:text="@string/share"
            tools:ignore="TooManyViews" />

          <TextView
            style="@style/AboutActivityItemSummary"
            android:text="@string/share_summary" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

      <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout
        android:id="@+id/check_update"
        style="@style/AboutActivityItemContainer">

        <ImageView
          style="@style/AboutActivityIconImg"
          android:src="@drawable/update"
          tools:ignore="ContentDescription" />

        <com.mirfatif.permissionmanagerx.fwk.MyLinearLayout style="@style/AboutActivityItemTextBox">

          <TextView
            style="@style/AboutActivityItemTitle"
            android:text="@string/update" />

          <TextView
            android:id="@+id/check_update_summary"
            style="@style/AboutActivityItemSummary"
            android:text="@string/update_summary" />

        </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
      </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>

      <View
        style="@style/ListSeparator"
        android:background="?attr/accentColor" />

    </com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
  </androidx.core.widget.NestedScrollView>

  <View
    android:id="@+id/snack_bar_anchor"
    android:layout_width="match_parent"
    android:layout_height="0dp" />

</com.mirfatif.permissionmanagerx.fwk.MyLinearLayout>
